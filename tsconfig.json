{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "~/ui-kit/*": ["./src/app/shared/ui-kit/*"],
      "~/icons/*": ["./src/app/icons/*"],
      "~/api/*": ["./src/app/shared/api/*"],
      "~/features/*": ["./src/app/features/*"],
      "~/widgets/*": ["./src/app/widgets/*"],
      "~/pages/*": ["./src/app/pages/*"],
      "~/services/*": ["./src/app/shared/services/*"],
      "@spartan-ng/ui-checkbox-helm": [".\\ui-checkbox-helm/src/index.ts"],
      "@spartan-ng/ui-icon-helm": [".\\ui-icon-helm/src/index.ts"],
      "@spartan-ng/ui-button-helm": [
        ".\\components/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-menu-helm": [".\\components/ui-menu-helm/src/index.ts"],
      "@spartan-ng/ui-switch-helm": [
        ".\\components/ui-switch-helm/src/index.ts"
      ],
      "@spartan-ng/ui-input-helm": [
        ".\\src/app/shared/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/ui-label-helm": [
        ".\\src/app/shared/ui-label-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
